/* pages/home/home/home.wxss */
.home {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background: #ccc;
}
.banner {
  width: 100%;
  height: 350rpx;
  /* overflow: hidden; */
}
.nav {
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  background-color:white;
}
.nav .nav-row{
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  word-wrap: break-word;
  word-break: normal;
}
.nav .nav-row .nav-item{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 10rpx;
  background-color:white;
}
.nav .nav-row .nav-item image{
  width: 80rpx;
  height: 80rpx;
}
.nav .nav-row .nav-item text{
  font-size: 26rpx;
  color: darkgrey;
}
.popular{
  width: 95%;
  height: 1700rpx;
  align-items: center;
  margin-top: 40rpx;
  background-color: tomato;
}
.popular .title{
  width: 100%;
  height: 100rpx;
  background-color: white;
  border:1rpx #ccc solid;
  border-radius: 20rpx 20rpx 0 0 ;
}
.popular .title text{
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  color: slategray;
  font-size: 40rpx;
  font-weight: bolder;
  line-height: 100rpx;
  padding-left: 20rpx;
  border-radius: 100rpx 0;
}
.popular .pp{
  width: 100%;
  height: auto;
}
.popular .pp .row{
  width: 100%;
  height: auto;
  border:1rpx #ccc solid;
  background: white;
}
.popular .pp .row image{
  width: 100%;
  height: 500rpx;
}
.popular .pp .row .text{
  margin: 0;
  padding: 20rpx;
  background: white;
}
.popular .pp .row text{
  padding-left:10rpx ; 
  padding-top:5rpx ;
}
.text-title{
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.text-direction{
  width: 100%;
  font-size: 30rpx;
  display: block;
  color: grey;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis
}
.text-price{
  color: orangered;
  font-size: 45rpx;
}

.popular .pp .row .line2{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  background: royalblue;
}
.popular .pp .row .line2 .pl{
  width: 50%;
  height: 100%;
  background: green;
  display: flex;
  flex-direction: column;
  border: 1rpx #ccc solid;
  margin-left: -2rpx;
}

